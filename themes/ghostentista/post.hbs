{{!< default}}
<main id="main-content" class="content" role="main">
    <div class="article-wrapper">
        <article class="loading detail-post">
		  {{#post}}
                  <span class="post-meta" name="post-content">
                      <time datetime="{{date published_at timeago="true"}}">{{date published_at timeago="true"}}</time>
	                {{#if tags}}on {{tags separator=" | "}}{{/if}}
                  </span>

                  <h1 class="post-title">{{{title}}}</h1>

                  <section class="post-content">
				{{content}}
                  </section>

                  <section class="share">
                      <h4>Share this post</h4>
                      <div class="links">
                          <a class="icon-twitter-circled"
                             href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                             onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                              <span class="hidden">Twitter</span>
                          </a>
                          <a class="icon-facebook-circled"
                             href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                             onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                              <span class="hidden">Facebook</span>
                          </a>
                          <a class="icon-gplus-circled" href="https://plus.google.com/share?url={{url absolute="true"}}"
                             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                              <span class="hidden">Google+</span>
                          </a>
                      </div>
                  </section>

                  <footer class="post-footer">
				<nav class="related-posts">
				  <h4>Related posts</h4>
				  <ul></ul>
				</nav>
	                  {{#if author.bio}}
				<section class="author">
				  <div class="image"><img src="{{author.image}}" title="{{author.name}}"/></div>
				  <div class="about">
				      <h4>{{author.name}}</h4>
				      <p>{{author.bio}}</p>
				  </div>
				</section>
				{{/if}}
                  </footer>
		  {{/post}}
        </article>
    </div>

</main>